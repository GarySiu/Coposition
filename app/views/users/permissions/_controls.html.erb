<div class="col s5 permission <%=permissions_control_class(permissionable)%>">
  <div class="<%=permissions_switch_class(permissionable)%> switch" data-id=<%=permissionable.id%> data-attribute="privilege" data-switch="disallowed">
    <label>
      <%= check_box_tag 'privilege','', permissions_check_box_value(permissionable, 'disallowed') %>
      <span class="lever"></span>
      Disable access <%= permissions_for_all(permissionable) %>
    </label>
  </div>
  <div class="<%=permissions_switch_class(permissionable)%> switch disable" data-id=<%=permissionable.id%> data-attribute="bypass_fogging" data-switch="bypass_fogging">
    <label>
      <%= check_box_tag 'bypass_fogging','', permissions_check_box_value(permissionable, 'bypass_fogging') %>
      <span class="lever"></span>
      Bypass Fogging <%= permissions_for_all(permissionable) %>
    </label>
  </div>
  <div class="<%=permissions_switch_class(permissionable)%> switch disable" data-id=<%=permissionable.id%> data-attribute="bypass_delay" data-switch="bypass_delay">
    <label>
      <%= check_box_tag 'bypass_delay','', permissions_check_box_value(permissionable, 'bypass_delay') %>
      <span class="lever"></span>
      Bypass Delay <%= permissions_for_all(permissionable) %>
    </label>
  </div>
  <div class="<%=permissions_switch_class(permissionable)%> switch disable" data-id=<%=permissionable.id%> data-attribute="privilege" data-switch="last_only">
    <label>
      <%= check_box_tag 'last_only','', permissions_check_box_value(permissionable, 'last_only') %>
      <span class="lever"></span>
      All checkins/Last only <%= permissions_for_all(permissionable) %>
    </label>
  </div>
</div>
