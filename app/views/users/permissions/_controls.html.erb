<div class="col s5 permission <%=partial_class(thing)%>">
  <div class="<%=switch_class(thing)%> switch" data-id=<%=thing.id%> data-attribute="privilege" data-switch="disallowed">
    <label>
      <%= check_box_tag 'privilege','', check_box_value(thing, 'disallowed') %>
      <span class="lever"></span>
      Disable access <%= for_all(thing) %>
    </label>
  </div>
  <div class="<%=switch_class(thing)%> switch disable" data-id=<%=thing.id%> data-attribute="bypass_fogging" data-switch="bypass_fogging">
    <label>
      <%= check_box_tag 'bypass_fogging','', check_box_value(thing, 'bypass_fogging') %>
      <span class="lever"></span>
      Bypass Fogging <%= for_all(thing) %>
    </label>
  </div>
  <div class="<%=switch_class(thing)%> switch disable" data-id=<%=thing.id%> data-attribute="bypass_delay" data-switch="bypass_delay">
    <label>
      <%= check_box_tag 'bypass_delay','', check_box_value(thing, 'bypass_delay') %>
      <span class="lever"></span>
      Bypass Delay <%= for_all(thing) %>
    </label>
  </div>
  <div class="<%=switch_class(thing)%> switch disable" data-id=<%=thing.id%> data-attribute="privilege" data-switch="last_only">
    <label>
      <%= check_box_tag 'last_only','', check_box_value(thing, 'last_only') %>
      <span class="lever"></span>
      All checkins/Last only <%= for_all(thing) %>
    </label>
  </div>
</div>
