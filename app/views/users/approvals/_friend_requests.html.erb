<div id="friendRequests">
  <h5>Requests</h5>
  <div class='collection'>
    <% pending.each do |friend| %>
      <% approval = current_user.approval_for(friend) %>
      <div id='<%= "app_#{approval.id}" %>' class='collection-item row valign-wrapper'>
        <div class="col s8 valign">
        <% if friend.avatar? %>
          <%= cl_image_tag(friend.avatar.path, { size: '60x60', crop: :thumb, gravity: :face, radius: :max }) %>
        <% end %>
          <h5><%= friends_name(friend) %></h5>
        </div>
        <div class="col s4 valign right-align">
          <%= button_to "Approve", approve_user_approval_path(current_user.url_id, approval.id), remote: true, class: "btn" %>
          <%= button_to "Reject", reject_user_approval_path(current_user.url_id, approval.id), remote: true, class: "btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

