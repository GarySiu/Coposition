<div id="approvedDevelopers" class="animated">
  <div class="collection">
    <% apps.each do |dev| %>
      <div class="collection-item avatar row valign-wrapper">
        <div class="col s8 valign">
            <%= avatar_for(dev, { size: '60x60', crop: :thumb, gravity: :face, radius: :max }) %>
          <h5><%= dev.company_name %></h5>
          <% if dev.tagline %>
            <p><%= dev.tagline %></p>
          <% end %>
        </div>
        <div class="col s4 valign right-align">
          <%= button_to "Revoke Approval", reject_user_approval_path(current_user.url_id, current_user.approval_for(dev)), remote: true, class: "btn-flat", data: { confirm: "Are you sure? This app will no longer have access to any of your data."} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
