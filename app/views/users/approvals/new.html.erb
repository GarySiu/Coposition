Enter the email address of a registered user or developer so that you can ask for their approval.<br>

<%= form_for @approval, url: user_approvals_path do |f| %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :approvable, 'Email', class: "active" %>
      <%= f.email_field :approvable, placeholder: "email@email.com", class: "validate" %>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <%= f.label :approvable_type %>
      <%= f.select :approvable_type, options_for_select([['User', 'User'], ['Developer', 'Developer']], @approval.approvable_type), class: "input-field col s12" %>
    </div>
  </div>

  <%= f.button "Request", class: "waves-effect waves-light btn", type: "submit" %>
  <% unless @approval.approvable_type == 'Developer' %>
    <%= f.button "Invite", class: "waves-effect waves-light btn", type: "submit", name: "invite" %>
  <% end %>
<% end %>
