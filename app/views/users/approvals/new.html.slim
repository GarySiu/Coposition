= form_for @approval, url: @approvals_presenter.create_approval_url do |f|
  .row
    .col.s12.input-field.search
      = f.text_field :approvable, @approvals_presenter.input_options
  = f.hidden_field :approvable_type, value: @approvals_presenter.approvable_type
  = f.button "Add", class: "waves-effect waves-light btn", type: "submit"
javascript:
  | var substringMatcher = function(strs) {
    | return function findMatches(q, cb) {
      | var matches, substringRegex;

      /!/ an array that will be populated with substring matches
      | matches = [];

      /!/ regex used to determine if a string contains the substring `q`
      | substrRegex = new RegExp(q, 'i');

      /!/ iterate through the pool of strings and for any string that
      /!/ contains the substring `q`, add it to the `matches` array
      | $.each(strs, function(i, str) {
        | if (substrRegex.test(str)) {
          | matches.push(str);
        | }
      | });

      | cb(matches);
    | };
  | };

  | var devs = #{raw @developers.to_json};

  | $('.search .devs_typeahead').typeahead({
    | hint: true,
    | highlight: true,
    | minLength: 1
  | },
  | {
    | name: 'devs',
    | source: substringMatcher(devs)
  | });
