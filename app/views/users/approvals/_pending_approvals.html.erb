<% if @pending_approvals %>

  You have
  <span id="pending_count"><%= @pending_approvals.length %></span>
  pending.
  <br>
  <% @pending_approvals.each do |app| %>
    <div id="<%= "app_#{app.id}" %>"class="panel panel-default m-m">
      <div class="panel-heading"><%= app.developer.email %></div>
      <div class="panel-body">
        <%= button_to "Accept", approve_users_approval_path(app.id), remote: true, class: "btn btn-success" %>
      </div>
      <br>
    </div>
  <% end %>
  <hr>
<% end %>