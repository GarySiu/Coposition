<div class="list-group-item">
  <a id="<%= device.name %>" href="<%= user_device_path(current_user.url_id, device) %>" class="list-group-item">
    <h4 class="list-group-item-heading"><%= device.name %></h4>
    <% if device.checkins.exists? %>
      <p class="list-group-item-text">Last reported in <%= device.checkins.last.address%> </p>
    <% else %>
      <p class="list-group-item-text">No checkins found </p>
    <% end %>
    <% if device.fogged %>
      <p class="list-group-item-text">Fogging is enabled on this device.</p>
    <% end %>
    <% if device.delayed %>
      <p class="list-group-item-text">Timeshifted with a delay of <%= "#{device.delayed.to_s+' minutes'}"%></p>
    <% end %>
    
  </a>
  <div class="row pt-m">
    <div class="col-lg-12 list-group-item-text">
      <% device.developers.each do |developer| %>
        <div id="<%= "device#{device.id}developer#{developer.id}" %>" class="col-lg-3 col-lg-offset-1 dev-box small-curved-border small-height clearfix tiny-shadow m-tb-s <%= "privilege-#{device.privilege_for(developer)}" %>">
          <%= link_to(developer.company_name, switch_privilege_for_developer_user_device_path(current_user.url_id, device.id, developer: developer.id), html_options={ method: :post, remote: true, class: "white-link" })  %>
        </div>
      <% end %>
    </div>
  </div>
</div>