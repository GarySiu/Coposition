<table class="table table-striped table-hover">
  <tr>
    <th>
      Latitude
    </th>
    <th>
      Longitude
    </th>
    <th>
      Country Code
    </th>
    <th>
      Created At
    </th>
    <th>
      More Info
    </th>
    <th>
      Delete
    </th>
  </tr>
  <% @checkins.each do |checkin| %>
    <tr id="checkin<%= checkin.id %>" class="animated">
      <td>
        <%= checkin.lat %>
      </td>
      <td>
        <%= checkin.lng %>
      </td>
      <td>
        <%= checkin.country_code %>
      </td>
      <td>
        <%= checkin.created_at %>
      </td>
      <td>
        <%= link_to user_device_checkin_path(current_user.username, @device.id, checkin.id), class: "btn btn-primary" do %>
          <span style="font-size:1.3em;" class="glyphicon glyphicon-info-sign"></span> 
        <% end %>
      </td>
      <td>
        <%= button_to checkin_user_device_path(current_user.id, @device.id, checkin_id: checkin.id), method: :delete, remote: :true, class: "btn btn-danger" do %>
          <span style="font-size:1.3em;" class="glyphicon glyphicon-remove-circle"></span>
        <% end %>
      </td>
    </tr>  
  <% end %>
  <%= will_paginate @checkins %>
</table>