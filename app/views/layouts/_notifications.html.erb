  <% if flash[:notification] %>
    <script type="text/javascript">
    <% flash[:notification].each do |message| %>
        Materialize.toast('<%= message %>', 3000)
    <% end %>
    </script>
    <% flash.discard(:notification) %>
  <% end %>
  <% if flash[:alert] %>
    <script type="text/javascript">
      Materialize.toast('<%= flash[:alert] %>', 3000, 'red')
    </script>
    <% flash.discard(:alert) %>
  <% end %>
  <% if flash[:notice] %>
    <script type="text/javascript">
      Materialize.toast('<%= flash[:notice] %>', 3000)
    </script>
    <% flash.discard(:notice) %>
  <% end %>
