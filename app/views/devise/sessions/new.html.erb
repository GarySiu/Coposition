<div class="row">
  <section class="section col s12 m6 offset-m3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <fieldset class="card">
      <div class="card-content">
        <legend class="card-title"><%= resource.class %> log in</legend>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :email, "Your email", class: "active" %>
            <%= f.email_field :email, autofocus: true, class: "validate" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :password, "Your password" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "right" %>
            <% end -%>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <%= f.button "Log in", type: "submit", class: "waves-effect waves-light btn" %>
          </div>
        </div>
      </div>
    </fieldset>
    <% end %>
      <div class="row">
        <div class="col s12 light-text">
          Not yet a <%= "#{resource.class.to_s.downcase}" %>? <%= link_to "Sign up!", new_registration_path(resource_name) %>
        </div>
      </div>
  </section>
</div>
<div class="promo">
  <video autoplay="autoplay" loop="loop" poster="/videos/background.png">
    <source src="/videos/background.webm" type="video/webm" />
    <source src="/videos/background.mp4" type="video/mp4" />
    <source src="/videos/background.ogv" type="video/ogg" />
    <img alt="Coposition" src="/videos/background.png"/>
  </video>
  <div class="overlay"></div>
</div>
<%= render "devise/shared/links" %>
