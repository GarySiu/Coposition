<center><h3><%= resource.class %></h3></center>
<div class="row">
  <section class="section col s6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <legend>Log in</legend>
    <fieldset>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email, class: "active" %>
          <%= f.email_field :email, autofocus: true, placeholder: "email@email.com", id: "login_#{resource.class.to_s.downcase}_email", class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", id: "login_#{resource.class.to_s.downcase}_password" %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
      <div class="row">
        <div class="col s12">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
      <% end -%>
      <div class="row">
        <div class="col s12">
          <%= f.button "Log in", type: "submit", class: "waves-effect waves-light btn" %>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <% end -%>
        </div>
      </div>
    </fieldset>
    <% end %>
  </section>
  
  <section class="section col s6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <legend>Sign up</legend>
    <fieldset>
      <% if resource.respond_to? :company_name %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :company_name %>
            <%= f.text_field :company_name, id: "register_#{resource.class.to_s.downcase}_company_name" %>
          </div>
        </div>
          <div class="file-field input-field">
            <div class="btn">
              <span>Logo</span>
              <%= f.file_field :logo, id: "register_#{resource.class.to_s.downcase}_logo" %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="&lt; 1mb, square format, jpeg/png">
            </div>
          </div>
      <% end %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email %>
          <%= f.email_field :email, id: "register_#{resource.class.to_s.downcase}_email", class: "validate" %>
        </div>
      </div>
      <% if resource.respond_to? :username %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :username, "Optional username" %>
            <%= f.text_field :username, id: "register_#{resource.class.to_s.downcase}_username" %>
          </div>
        </div>
      <% end %>
      <% if resource.respond_to? :redirect_url %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :redirect_url, class: "active" %>
            <%= f.text_field :redirect_url, placeholder: "Your Site URL", id: "register_#{resource.class.to_s.downcase}_redirect_url" %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%=@minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", id: "register_#{resource.class.to_s.downcase}_password" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", id: "register_#{resource.class.to_s.downcase}_password_confirmation" %>
        </div>
      </div>
      <%= f.button "Sign up", class: "waves-effect waves-light btn" %>
    </fieldset>
    <% end %>
  </section>

</div>
<%= render "devise/shared/links" %>
