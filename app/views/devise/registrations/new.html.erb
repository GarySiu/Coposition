<div class="row">
  <div class="col-lg-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: "form-horizontal well" }) do |f| %>
      <%= devise_error_messages! %>
      <legend>Sign up</legend>
      <fieldset>
        <% if resource.respond_to? :company_name %>
          <div class="form-group">
            <%= f.label :company_name, class: "col-lg-2 control-label" %>
            <div class="col-lg-10">
              <%= f.text_field :company_name, autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :company_name, class: "col-lg-2 control-label" %><em>(&lt; 1mb, square format, jpeg/png)</em>
            <div class="col-lg-10">
              <%= f.file_field :logo %>
            </div>
          </div>
        <% end %>

        <% if resource.respond_to? :username %>
          <div class="form-group">
            <%= f.label :username, class: "col-lg-2 control-label" %>
            <div class="col-lg-10">
              <%= f.text_field :username, autofocus: true %>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :email, class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <% if @minimum_password_length %>
              <em>(<%=@minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
